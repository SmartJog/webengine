#!/bin/sh
# PostInstall script for WebEngine.

set -e

#DEBHELPER#

if ! sjconf --list-plugins | grep "^Plugin webengine:$" > /dev/null
then
    sjconf --install-conf-with-symlink /etc/webengine/sjconf/confs/webengine.conf
    if [ -e /etc/webengine/sjconf/templates/webengine/webengine.conf ]
    then
        sjconf --install-template-with-symlink /etc/webengine/sjconf/templates/webengine
    fi
    sjconf --install-plugin-with-symlink /usr/share/sjconf-webengine/webengine.py
    sjconf --enable-plugin webengine
    sjconf --deploy --restart webengine
fi

exit 0
